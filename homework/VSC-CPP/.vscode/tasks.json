{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "g++",
            "args": [
                "main.cpp",
                "add.cpp",
                "sub.cpp",
                "-o",
                "a.exe"
            ]
        },
        {
            "label": "build-debug",
            "command": "g++",
            "args": [
                "-g",
                "main.cpp",
                "add.cpp",
                "sub.cpp",
                "-o",
                "main.exe"
            ],
            "type": "shell"
        }
    ]
}